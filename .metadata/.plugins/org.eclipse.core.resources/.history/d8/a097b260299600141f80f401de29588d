#include <stdio.h>
#include <stdlib.h>

int main(int *argc, char *argv[]) {
	if (argc != 4) {
		printf("Invalid number of arguments\n");
		return 0;
	}

	switch (*argv[1]) {
	case '+':
		printf("%i\n", atoi(argv[2]) + atoi(argv[3]));
		break;
	case '-':
		printf("%i\n", atoi(argv[2]) - atoi(argv[3]));
		break;
	case '*':
		printf("%i\n", atoi(argv[2]) * atoi(argv[3]));
		break;
	case '/':
		printf("%i\n", atoi(argv[2]) / atoi(argv[3]));
		break;
	case '%':
		printf("%i\n", atoi(argv[2]) % atoi(argv[3]));
		break;
	default:
		printf("Invalid operator\n");
	}
}
